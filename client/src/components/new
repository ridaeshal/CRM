  return (
    <div className="w-64 h-screen bg-gray-50 border-r px-4 py-6 flex flex-col">
      <h1 className="text-xl font-bold mb-6">CRM System</h1>
      <nav className="space-y-2">
        {menuItems.map((item) => (
